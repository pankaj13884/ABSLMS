@using ABS_LMS.Models.Security
@model ABS_LMS.Models.EmployeeViewModel
@{
    ViewBag.Title = "Details";
}

<div class="row patding-left-10">
    <h1 id="headerText">    @Html.DisplayFor(model => model.EmployeeDetail.FirstName)     @Html.DisplayFor(model => model.EmployeeDetail.LastName) - @Html.DisplayFor(model => model.EmployeeDetail.EmployeeCode)</h1>

    <div class="col-lg-4">

        <div class="panel panel-default">
            <div class="panel-heading">Personal Details</div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.EmployeeImage)
                    </th>

                    <td>
                        @if (Model.EmployeeDetail.EmployeeImage != null && Model.EmployeeDetail.EmployeeImage.Length > 0)
                        {
                            string imageBase64 = Convert.ToBase64String(Model.EmployeeDetail.EmployeeImage);
                            string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                            <img id="user_img" height="100" width="90" src="@imageSrc" style="border: solid" />

                        }
                        else {<img class="img-circle" src="~/Content/themes/LMS/images/profile-img.jpg" height="100" width="90" style="border: solid">}
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.EmployeeCode)
                    </th>

                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.EmployeeCode)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.FirstName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.FirstName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.LastName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.LastName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Gender)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Gender)
                    </td>
                </tr>
         
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.DOB)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.DateofBirth)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.DOJ)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.DOJ)
                    </td>
                </tr>
            </table>
            <div class="panel-body">
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">Address</div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Address1)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Address1)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Address2)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Address2)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Address3)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Address3)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Address4)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Address4)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.PostCode)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.PostCode)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.City)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.City)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.State)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.State)
                    </td>
                </tr>
            </table>

        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Department</div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Department)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Department)
                    </td>
                </tr>
                @if (HttpCurrentUser.IsHR || HttpCurrentUser.IsAdmin)
                {
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeDetail.ClientId)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.EmployeeDetail.Client)
                        </td>
                    </tr>
                }
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.Designation)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.Designation)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.ReportingManagerName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.ReportingManagerName)
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-heading">Other Details</div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.PANCard)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.PANCard)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.AadharId)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.AadharId)
                    </td>
                </tr>
                @if (HttpCurrentUser.IsHR || HttpCurrentUser.IsAdmin)
                {
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeDetail.LeavingDateUTC)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.EmployeeDetail.LeavingDateUTC)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeDetail.ConfirmationDateUTC)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.EmployeeDetail.ConfirmationDateUTC)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Contact Details</div>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.EmailId)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.EmailId)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.CompanyEmailId)
                    </th>
                    <td class="word-break">
                        @Html.DisplayFor(model => model.EmployeeDetail.CompanyEmailId)
                    </td>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeDetail.MobileNo)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.EmployeeDetail.MobileNo)
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div class="row patding-left-10">
    <div class="col-lg-12">
        <p>
            @if (HttpCurrentUser.IsHR || HttpCurrentUser.IsAdmin)
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeDetail.EmployeeId })
                @(" |")
            }
            @Html.ActionLink("Back to List", "Index", new { id = HttpCurrentUser.EmployeeId })
        </p>

    </div>
</div>



@section scripts
        {
    <script type="text/javascript">
        $(document).ready(function () {
            $('.nav #Profile').addClass('active');
        });
    </script>
}
